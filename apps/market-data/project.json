{
    "name": "market-data",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "apps/market-data/src",
    "projectType": "application",
    "tags": [],
    "targets": {
        "build": {
            "executor": "nx:run-commands",
            "options": {
                "command": "webpack-cli --config apps/market-data/webpack.config.js",
                "cwd": ".",
                "assets": [
                    {
                        "input": "libs/proto",
                        "glob": "**/*.proto",
                        "output": "proto"
                    },
                    {
                        "input": "libs/proto",
                        "glob": "common.proto",
                        "output": "proto/libs/proto"
                    }
                ]
            },
            "configurations": {
                "development": {
                    "command": "webpack-cli --config apps/market-data/webpack.config.js --env node-env=development"
                }
            }
        },
        "serve": {
            "executor": "@nx/js:node",
            "defaultConfiguration": "development",
            "dependsOn": ["build"],
            "options": {
                "buildTarget": "market-data:build",
                "runBuildTargetDependencies": false
            },
            "configurations": {
                "development": {
                    "buildTarget": "market-data:build:development"
                },
                "production": {
                    "buildTarget": "market-data:build:production"
                }
            }
        }
    }
}
